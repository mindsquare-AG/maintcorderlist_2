<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	controllerName="com.app.mindsquare.maintcorderlist.controller.OrderDetails" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<App>
		<pages>
			<Page title="{i18n>detailsTitle} {AUFNR}" showNavButton="true" navButtonPress="fnNavBack" titleAlignment="Center">
				<content>
					<f:SimpleForm id="header_data" editable="true" emptySpanL="3" labelSpanL="3" emptySpanM="3" labelSpanM="3" layout="ResponsiveGridLayout">
						<f:content>
							<!-- Auftragskurztext -->
							<Label text="{i18n>master.shortText}"/>
							<Input value="{AUFTXT}"/>
							<!-- Rückmeldenummer -->
							<Label text="{i18n>master.rueckNr}"/>
							<Input value="{Ruecknr}"/>
							<!-- Auftragsstatus -->
							<Label text="{i18n>master.status}"/>
							<Input value="{Status}" editable="false"/>
							<!-- Auftragsart -->
							<Label text="{i18n>master.auart}"/>
							<Input value="{AUART} {AUART_TXT}" editable="false"/>
							<!-- Techn. Platz oder Equipment SUCHHILFE-->
							<Label text="{i18n>master.techPlEquip}"/>
							<Input id="fieldTechObj" showValueHelp="true" valueHelpRequest="valueHelp" value="{TPLNR}" cd:functionalLocationSelectionAllowed="true"
								cd:equipmentSelectionAllowed="true" cd:functionalLocationsWithDisabledInstallationSelectionAllowed="true" cd:idPropertyName="/TECHOBJ"
								cd:descriptionPropertyName="/TECHOBJDESC" cd:propertyModel="notificationHelper"
								cd:parentFunctionalLocationIdPropertyName="/Item1ParentFunctionalLocationId"
								cd:parentFunctionalLocationDescriptionPropertyName="/Item1ParentFunctionalLocationDescription" cd:isEquipmentPropertyName="/IsEquipment"/>
							<!-- Functional Location / Equipment Description -->
							<Label text=" {i18n>master.field.technicalObjectDescription}"/>
							<Input editable="false" value="{notificationHelper>/TECHOBJDESC}"/>
							<!-- Id and description of functional location the equipment is equipped in -->
							<Label text="{i18n>Item1ParentLabel}" visible="{= ${notificationHelper>/IsEquipment} === true}"/>
							<Input editable="false" value="{notificationHelper>/Item1ParentFunctionalLocationId}"
								visible="{= ${notificationHelper>/IsEquipment} === true}"/>
							<Input editable="false" value="{notificationHelper>/Item1ParentFunctionalLocationDescription}"
								visible="{= ${notificationHelper>/IsEquipment} === true}"/>
							<!-- Verantw. Arbeitsplatz DROPDOWN NOCH NICHT RICHTIG-->
							<Label text="{i18n>master.Vaplz}"/>
							<Select id="dropDownVaplz" forceSelection="false" items="{ path: 'generalServices>/ResponsibleWorkCenter'}" selectedKey="{Vaplz}">
								<core:ListItem text="{generalServices>Vatxt}" additionalText="{generalServices>Vaplz}" key="{generalServices>Vaplz}"/>
							</Select>
							<!-- Wartungsplan -->
							<Label text="{i18n>master.wartPl}"/>
							<Input value="{Warpl}" editable="false"/>
							<!-- Wartungsposition -->
							<Label text="{i18n>master.wartPos}"/>
							<Input value="{Wapos}" editable="false"/>
							<!-- Plangruppe & Plangruppenzähler -->
							<Label text="{i18n>master.planGrPlanGrZ}"/>
							<Input value="{Plnnr} {Plnal}" editable="false"/>
							<!-- IH-Leistungsart DROPDOWN -->
							<Label text="{i18n>master.ila}"/>
							<Select items="{path: 'generalServices>/MaintenanceActivityTypeSet'}" selectedKey="{Ila}">
								<core:Item text="{generalServices>Ilatx}" key="{generalServices>Ilart}"/>
							</Select>
							<!-- Standort & Betriebsbereich -->
							<Label text="{i18n>master.standort}"/>
							<Input value="{Standort} {Beber}" editable="false"/>
						</f:content>
					</f:SimpleForm>
					<IconTabBar id="idIconTabBarInlineMode" headerMode="Inline" class="sapUiResponsiveContentPadding">
						<items>
							<IconTabFilter text="{i18n>master.posDaten}" key="info">
								<Table noDataText="No Data">
									<items>
										<ColumnListItem counter="0">
											<cells>
												<ObjectIdentifier text="{VORNR}"></ObjectIdentifier>
												<Text text="{VORTXT}"></Text>
												<HBox >
													<Button text="{i18n>master.bookTime}" icon="sap-icon://create-entry-time" press="onBookTime"/>
												</HBox>
											</cells>
										</ColumnListItem>
									</items>
									<columns>
										<Column>
											<header>
												<Text text="Vorgangsnr." maxLines="0"></Text>
											</header>
										</Column>
										<Column >
											<header>
												<Text text="Vorgangstext" maxLines="0"></Text>
											</header>
										</Column>
										<Column></Column>
									</columns>
								</Table>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
				<footer>
					<Bar>
						<contentRight>
							<Button type="Accept" icon="sap-icon://save" text="Auftrag abschließen" press="fnOnSaveButtonPressed" id="btn_Save"/>
						</contentRight>
					</Bar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>