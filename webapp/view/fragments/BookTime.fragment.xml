<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" id="BookTime" fragmentName="my.BookTime" xmlns:f="sap.ui.layout.form">
	<Dialog id="BookTime_Dialog" class="sapUiPopupWithPadding" contentHeight="80%"
		contentWidth="{= (${device>/system/phone} || (${device>/system/tablet} &amp;&amp; ${device>/orientation/portrait})) ? '90%' : '40%'}">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Title id="BookTime_Dialog_Title" text="{i18n>master.bookTime}"/>
				</contentMiddle>
				<contentRight>
					<Button press="onBookTimeClose" tooltip="schließen" icon="sap-icon://decline"/>
				</contentRight>
			</Bar>
		</customHeader>
		<f:SimpleForm editable="true" emptySpanL="3" labelSpanL="3" emptySpanM="3" labelSpanM="3" layout="ResponsiveGridLayout">
			<f:content>
				<HBox alignItems="Center" justifyContent="Center">
					<Text renderWhitespace="true" text="Dauer"/>
					<Switch id="switchBooking" state="{view>/BookTime/Hours}" customTextOn=" " customTextOff=" " change="handleChange"/>
					<Text renderWhitespace="true" text="Zeiten"/>
				</HBox>
				<Label/>
				<!-- Stunden -->
				<!-- TimePicker id="time1" valueFormat="HH:mm" displayFormat="HH:mm" change="handleChange1" placeholder="Stunden:Minuten"
					visible="{= !${view>/BookTime/Hours}}" value="{Idaur}"/ -->
				<Input id="time1" value="{Idaur}" placeholder="Dauer in Minuten" visible="{= !${view>/BookTime/Hours}}"/>
				<!-- Uhrzeit von -->
				<Label text="von" visible="{view>/BookTime/Hours}"/>
				<TimePicker id="time2" valueFormat="HH:mm" displayFormat="HH:mm" placeholder="Uhrzeit" visible="{view>/BookTime/Hours}" value="{Isdt}"/>
				<!-- Uhrzeit bis -->
				<Label text="bis" visible="{view>/BookTime/Hours}"/>
				<TimePicker id="time3" valueFormat="HH:mm" displayFormat="HH:mm" placeholder="Uhrzeit" visible="{view>/BookTime/Hours}" value="{Iedt}"/>
				<!-- Rückmeldetext -->
				<Label text="{i18n>master.rText}"/>
				<Input value="{Ltxa1}"/>
				<!-- Endrückmeldung -->
				<Label/>
				<CheckBox text="{i18n>master.endR}" selected="{Leknw}"/>
				<!-- Arbeitsplatz -->
				<Label text="{i18n>master.arbpl}"/>
				<Select forceSelection="false" items="{ path: 'generalServices>/ResponsibleWorkCenterSet'}" selectedKey="{Arbpl}">
					<core:ListItem text="{generalServices>Vatxt}" additionalText="{generalServices>Vaplz}" key="{generalServices>Vaplz}"/>
				</Select>
				<!-- Leistungsart -->
				<Label text="{i18n>master.lArt}"/>
				<Select forceSelection="false" items="{ path: 'generalServices>/ActivityTypeSet'}" selectedKey="{Learr}">
					<core:ListItem text="{generalServices>LstarText}" additionalText="{generalServices>Lstar}" key="{generalServices>Lstar}"/>
				</Select>
			</f:content>
		</f:SimpleForm>
		<buttons>
			<Button text="Abbrechen" press="onBookTimeClose"/>
			<Button type="Emphasized" text="{i18n>master.bookTime}" press="onBookTimePressed"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>